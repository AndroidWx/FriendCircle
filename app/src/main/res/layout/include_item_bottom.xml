<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="74dp"
    android:paddingRight="@dimen/item_padding"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="@dimen/small_font"
        android:gravity="center_vertical"
        android:textColor="@color/item_bottom_text"
        tools:text="3小时前"/>

    <FrameLayout
        android:id="@+id/comment_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/comment_press"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:src="@drawable/bg_comment_pressed"
            android:layout_gravity="center_vertical|right"/>
    </FrameLayout>

    <!--praise && comment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/comment_button">

        <razerdp.friendcircle.widget.praisewidget.PraiseWidget
            android:id="@+id/praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>